{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".", //project root
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@public/*": [
                "public/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}